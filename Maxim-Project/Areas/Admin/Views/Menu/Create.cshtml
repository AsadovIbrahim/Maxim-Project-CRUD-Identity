@model Service


<form class="container" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter Name">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Image</label>
        <input asp-for="ImageFile" class="form-control" placeholder="Enter Image">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>